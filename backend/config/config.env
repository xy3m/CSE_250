# ----------------------------------------------------
# 1. GENERAL CONFIGURATION
# ----------------------------------------------------
PORT = 4000
NODE_ENV = DEVELOPMENT


# ----------------------------------------------------
# 2. DATABASE CONFIGURATION (MongoDB)
# ----------------------------------------------------
# Local MongoDB: Replace with your local connection string
DB_URI = mongodb://127.0.0.1:27017/HaatBazar

# Remote MongoDB (e.g., MongoDB Atlas): Uncomment and use for production
# DB_URI = <YOUR_MONGODB_ATLAS_CONNECTION_STRING>


# ----------------------------------------------------
# 3. JSON WEB TOKEN (JWT)
# ----------------------------------------------------
# JWT Secret: Use a complex, long random string
JWT_SECRET = YOUR_SUPER_SECRET_HAATBAZAR_KEY
JWT_EXPIRE = 5d # Token expiration time (e.g., 5 days)
COOKIE_EXPIRE = 5 # Cookie expiration time (in days)


# ----------------------------------------------------
# 4. CLOUDINARY CONFIGURATION (Image Hosting)
# ----------------------------------------------------
CLOUDINARY_NAME = <YOUR_CLOUDINARY_CLOUD_NAME>
CLOUDINARY_API_KEY = <YOUR_CLOUDINARY_API_KEY>
CLOUDINARY_API_SECRET = <YOUR_CLOUDINARY_API_SECRET>


# ----------------------------------------------------
# 5. EMAIL CONFIGURATION (Nodemailer/SendGrid)
# ----------------------------------------------------
# Use this section if you are using Nodemailer with a service like Gmail:
SMTP_SERVICE = gmail
SMTP_MAIL = <YOUR_EMAIL@gmail.com>
SMTP_PASSWORD = <YOUR_GMAIL_APP_PASSWORD>
SMTP_HOST = smtp.gmail.com
SMTP_PORT = 465

# OR use this section if you prefer SendGrid (requires @sendgrid/mail)
# SENDGRID_API_KEY = <YOUR_SENDGRID_API_KEY>


# ----------------------------------------------------
# 6. PAYMENT GATEWAY CONFIGURATION
# ----------------------------------------------------

# --- Stripe ---
# Use the test keys for development
STRIPE_API_KEY = <YOUR_STRIPE_SECRET_KEY>
STRIPE_SECRET_KEY = <YOUR_STRIPE_PUBLISHABLE_KEY>

# --- Paytm (Alternative Payment Gateway) ---
PAYTM_MID = <YOUR_PAYTM_MERCHANT_ID>
PAYTM_KEY = <YOUR_PAYTM_MERCHANT_KEY>
PAYTM_WEBSITE = DEFAULT
PAYTM_CHANNEL_ID = WEB
PAYTM_INDUSTRY_TYPE_ID = Retail

# STRIPE API KEYS (Ensure you have a publishable and secret key from Stripe)
STRIPE_API_KEY = pk_test_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY = sk_test_YOUR_STRIPE_SECRET_KEY
